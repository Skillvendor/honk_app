<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
       <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Tweets</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to HonkA</h1>

    <h2>
      You are not logged in . If you already have an account sing in, if not sign up!
    </h2>

    <%= button_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary butonas" %>
  </div>
<% end %>
