<% provide(:title, 'Create Group') %>
<h1>Create new Group</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |g| %>
      <%= render 'shared/error_messages', object: g.object %>

      <%= g.label :name %>
      <%= g.text_field :name, class: 'form-control' %>

      <%= g.label :description %>
      <%= g.text_field :description, class: 'form-control' %>

      <%= g.label :open, class: "checkbox inline" do %>
        <%= g.check_box :open, {}, "false", "true" %>
        <span>Create a private group</span>
      <% end %>

      <%= g.submit "Create my group", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
