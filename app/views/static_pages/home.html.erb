<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
       <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      
      <% if @groupies.any? %>
      <section class="groups">
        <%= render 'shared/group_participation' %>
      </section>
      <% end %>

    </aside>
    <div class="col-md-6" id="feed">
      <section class="tweet_form">
        <%= render 'shared/tweet_form' %>
      </section>
      <%= render 'shared/feed' %>
    </div>
    <div class="col-md-3" style='margin-top: 15px' id="useri_sugerati">
      <h4 class="text"> Know them? </h4>
      <%= render 'shared/suggested' %>
      <h4 class="text"> Suggested Users </h4>
      <% if @suggested2 %>
      <%= render 'shared/suggested2' %>
      <% end %>
      <br>
      <%= button_to "Suggest", get_suggested_path, class: "btn btn-primary buton-sugest" %>
    </div>
    <div class="col-md-3 pull-right" style='margin-top: 15px' id="trending">  
      <br>
      <%= render 'shared/trendingHashtag' %>
      <br>
    </div>
    
<% else %>
 <div class="center jumbotron">
    <h1>Welcome to HonkA</h1>

    <h2>
      You are not logged in . If you already have an account sing in, if not sign up!
    </h2>

    <%= button_to "Sign up now!", signup_path, method: :get, class: "btn btn-lg btn-primary butonas" %>
  </div>

<% end %>
